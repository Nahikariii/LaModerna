@import 'custom_variables';
@import '../../bower_components/bootstrap-stylus/stylus/bootstrap';

@font-face{
	font-family: 'EraserRegular';
	src: url("/fonts/EraserRegular.ttf");
}

#content-header {
	img {
		height: auto;
		min-height: 300px;
		object-fit: cover;
		width: 100%;
	}
}

.item {
	img {
		height: auto;
		max-width: 100%;
		min-height: 300px;
		object-fit: cover;
	}
}

.header {
    @extends .row;
   .menu {
		@extends .col-xs-offset-1;
		@extends .col-xs-10;
		@extends .col-sm-offset-1;
		@extends .col-sm-10;
		@extends .col-md-offset-2;
		@extends .col-md-8;
		@media (min-width: 768px){
			.navbar-header {
				.navbar-brand {
					display: none;
				}
			}
		}
		.navbar-nav {
			text-align: center;
			width: 100%;
			@media (min-width: 768px){
				li {
					float: none;
					display: inline-block;
				}
			}
		}
		.navbar-collapse {
			li {
				text-align: left;
			}
		}
		.dropdown-menu {
			li {
				width: 100%;
			}
		}
    }
	position: absolute;
	top: 20px;
	z-index: 99;
    width:100%;
}

#carousel-main {
    width: 100%;
    height: 40%;
	.carousel-indicators {
		bottom: 0px;
		margin-left: -15%;
		text-align: right;
	}
	.carousel-caption {
		bottom: 0px;
		font-family: 'EraserRegular';
		font-size: 40px;
		padding-bottom: 5px;
	}
	.item {
		img {
			height: auto;
			object-fit: cover;
			width: 100%;
		}
	}
}

#highlights {
    @extends .row;
	padding-bottom: 50px;
    .highlight-element {
        @extends .col-sm-4;
        @extends .col-md-4;
        @extends .col-lg-4;
        h4 {
            color: $main-color;
            font-weight: bold;
        }
        p {
            margin-left: auto;
            margin-right: auto;
            text-align: center;
            width: 80%;
        }
		img {
			width: 140px;
			height: 140px;
		}
		padding-bottom: 30px;
    }
    text-align: center;
    margin: 20px auto;
}

#products {
    @extends .row;
    .product-element {
        @extends .col-md-3;
		.title {
			color: $main-color;
			font-weight: bold;
		}
		.reference {
			color: $tertiary-color;
		}
		span {
			margin-right: 5px;
			margin-left: 5px;
			width: 30px;
			height: 30px;
		}
		.product-image {
			margin: auto;
			width: $product-image-width;
			height: $product-image-height;
			img.img-circle {
				background-color: white;
			}
		}
		margin-bottom: 40px;
    }
    text-align: center;
    margin: -($products-margin) auto;
}

.shops {
	.shops-block {
		@extends .row;
	}
    .shop-element {
        @extends .col-md-3;
        h4 {
            color: $main-color;
            font-weight: bold;
        }
        p {
            margin-left: auto;
            margin-right: auto;
            text-align: center;
            width: 80%;
        }
		margin-bottom: 50px;
    }
    text-align: center;
	margin-top: 20px;
}

.img-circle {
	border: 2px dashed $tertiary-color;
}

.content-title {
	@extends h1;
	position: absolute;
	margin-left: 50px;
	color: white;
	margin-top: -150px;
	text-transform: capitalize;
	font-size: 60px;
    @media (max-width: 768px){
        margin-left: 20px;
        font-size: 45px;
    } 
}

.page-title {
	@extends h1;
	margin-left: 50px;
	text-transform: capitalize;
	font-size: 60px;
	margin-top: 90px;
	margin-bottom: 30px;
}

.orange {
	color: $main-color;
}

.map {
	@extends .row;
	#map_canvas {
		@extends .col-md-offset-2;
		@extends .col-md-8;
		height: 400px;
		border-radius: 5px;
	}
	width: 100%;
	margin-top: 20px;
}

.history {
	.img {
		float: left;
		width: 30%;
	}
	.content {
		@extends .row;
		.left {
			@extends .col-xs-offset-1;
			@extends .col-xs-10;
			@extends .col-sm-offset-1;
			@extends .col-sm-4;
			@extends .col-md-offset-1;
			@extends .col-md-3;
			padding-left: 0px;
			padding-right: 0px;

		}
		.right {
			@extends .col-xs-offset-1;
			@extends .col-xs-10;
			@extends .col-sm-offset-1;
			@extends .col-sm-6;
			@extends .col-md-offset-1;
			@extends .col-md-6;
			padding-top: 80px;
		}
		padding-top: 20px;
		padding-bottom: 20px;
	}	

	.inverse-content {
		@extends .row;
		.right {
			@extends .col-xs-offset-1;
			@extends .col-xs-10;
			@extends .col-sm-offset-1;
			@extends .col-sm-2;
			@extends .col-md-offset-1;
			@extends .col-md-3;
			padding-left: 0px;
			padding-right: 0px;
		}
		.left {
			@extends .col-xs-offset-1;
			@extends .col-xs-10;
			@extends .col-sm-offset-1;
			@extends .col-sm-7;
			@extends .col-md-offset-1;
			@extends .col-md-6;
			padding-top: 80px;
		}
		padding-top: 20px;
		padding-bottom: 20px;
		background-color: $main-color-light;
	}
	margin-bottom: 40px;
}

.page-wrap > .content {
	@extends .row;
	.block {
		@extends .col-xs-offset-1;
		@extends .col-xs-10;
		@extends .col-sm-offset-1;
		@extends .col-sm-10;
		@extends .col-md-offset-1;
		@extends .col-md-10;
		margin-bottom: 30px;
	}
	a {
		font-weight: bold;
		text-decoration: underline;
	}
	.video-container {
		@extends .col-md-offset-2;
		@extends .col-md-8;
		@extends .col-sm-offset-1;
		@extends .col-sm-10;
	}
	.datos-contacto {
		@extends .row;
		li {
			@extends .col-md-offset-3;
			@extends .col-md-8; 
			list-style-type: none;
		}
		.glyphicon {
			color: $main-color;
			font-weight: bold;
			font-size: 25px;
			@media (max-width: 768px){
				font-size: 15px;
			}
		}
		.phone-number, .email {
			margin-left: 5px;
			font-size: 2em;
			@media (max-width: 768px){
				font-size: 1em;
			}
		}
		.email > a {
			color: $main-color;
		}
		.address {
			@media (max-width: 768px){
				text-align: left;
				font-size: 0.9em;
				margin-left: 0px;
			}
			display: block;
			margin-left: 5px;
			font-size: 1.5em;
			&.street {
				display: inline-block;
			}
			&:not(.street){
				margin-left: 35px;
			}
		}
		@media (max-width: 768px){
			ul{
				padding: 0;
			}
		}
		text-align: left;
		margin-top: 30px;
	}
}

ol.labels-list {
	list-style-type: none;
	list-style-type: decimal !ie; /*IE 7- hack*/

	margin: 0;
	margin-left: 1em;
	padding: 0;

	counter-reset: li-counter;
}

ol.labels-list > li{
	position: relative;
	margin-bottom: 1.5em;
	padding-bottom: 21px;
	padding-left: 21px;
	padding-top: 30px;
	padding-right: 21px;
	background-color: $tertiary-color-light;
}

ol.labels-list > li:before {
	display: inline-block;
	position: absolute;
	top: -0.3em;
	left: -0.5em;
	width: 1.8em;
	height: 1.2em;

	font-size: 2em;
	line-height: 1.2;
	font-weight: bold;
	text-align: center;
	color: white;
	background-color: $main-color;

	rotate(-20deg);
	z-index: 99;
	overflow: hidden;

	content: counter(li-counter);
	counter-increment: li-counter;
}

.business-graph {
	@extends .row;
	.line-1 {
		@extends .col-md-offset-5;
		@extends .col-md-2;
		text-align: center;
	}
}

html, body {
  height: 100%;
}

.page-wrap {
    min-height: 100%;
    /* equal to footer height */
    margin-bottom: -$footer-height; 
    &.products {
	    margin-bottom: -$footer-height + products-margin;
	}
}

.page-wrap:after {
  content: "";
  display: block;
}

.site-footer, .page-wrap:after {
  /* .push must be the same height as footer */
  height: $footer-height; 
}

.site-footer {
  	background: orange;
    nav {
		@extends .navbar;
		@extends .navbar-default;
		margin-bottom: 0px;
		background-color: $tertiary-color-light;
		.brand {
			font-size: 20px;
			font-weight: bold;
			padding-bottom: 10px;
			padding-top: 10px;
			padding-left: 5px;
			@media (max-width: 768px){
				padding-left: 25px;
			}
		}
		@media (max-width: 768px){
			li {
				display: inline-block;
                padding-left: 15px;
			}
		}
		li {
			text-align: center;
		}
	}	
}


.esquema {
	margin-left: 10%;
}

.magnify {
	position: relative;
	cursor: none;
}

.magnify-large {
    position: absolute;
    display: none;
    width: 175px;
    height: 175px;

    -webkit-box-shadow: 0 0 0 7px rgba(255, 255, 255, 0.85), 0 0 7px 7px rgba(0, 0, 0, 0.25), inset 0 0 40px 2px rgba(0, 0, 0, 0.25);
       -moz-box-shadow: 0 0 0 7px rgba(255, 255, 255, 0.85), 0 0 7px 7px rgba(0, 0, 0, 0.25), inset 0 0 40px 2px rgba(0, 0, 0, 0.25);
            box-shadow: 0 0 0 7px rgba(255, 255, 255, 0.85), 0 0 7px 7px rgba(0, 0, 0, 0.25), inset 0 0 40px 2px rgba(0, 0, 0, 0.25);
    
    -webkit-border-radius: 100%;
       -moz-border-radius: 100%;
             border-radius: 100%
}
